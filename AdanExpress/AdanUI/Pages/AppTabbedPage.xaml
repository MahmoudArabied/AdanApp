<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:pages="clr-namespace:AdanUI.Pages"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            x:Class="AdanUI.Pages.AppTabbedPage">

    <NavigationPage Title="Home" IconImageSource="{StaticResource Home}" Shell.NavBarIsVisible="False">
        <x:Arguments>
            <pages:MainPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Qibla" IconImageSource="{StaticResource Compass}">
        <x:Arguments>
            <pages:MainPage Title="Qibla" />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Settings" IconImageSource="{StaticResource TabThree}">
        <x:Arguments>
            <pages:MainPage Title="Settings" />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="About" IconImageSource="{StaticResource TabFour}">
        <x:Arguments>
            <pages:MainPage Title="About" />
        </x:Arguments>
    </NavigationPage>

</TabbedPage>
